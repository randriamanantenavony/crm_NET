@model List<Lead>

@{
    ViewData["Title"] = "Liste des Leads";
}

<!-- En-tête de la page avec fond bleu pastel -->
<div class="container mt-4">


    <!-- Tableau des leads -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead>
                <tr style="background-color: #457b9d; color: white;">
                    <th>Lead ID</th>
                    <th>Nom</th>
                    <th>Status</th>
                    <th>Téléphone</th>
                    <th>Manager</th>
                    <th>Client</th>
                    <th>Créé le</th>                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var lead in Model)
                {
                    <tr>
                        <td>@lead.LeadId</td>
                        <td>@lead.Name</td>
                        <td>@lead.Status</td>
                        <td>@lead.Phone</td>
                        <td>@lead.Manager?.Username</td>
                        <td>@lead.Customer?.name</td>
                        <td>@lead.CreatedAt.ToString("dd/MM/yyyy")</td>
                         <td class="text-center">
                           <a href="/Lead/Edit/@lead.LeadId" class="btn btn-sm btn-primary" title="Modifier le prix">
                                <i class="fas fa-edit"></i>
                          </a>

                          <form asp-action="DeleteLead" asp-controller="Lead" method="post" style="display:inline;">
                            <input type="hidden" name="leadId" value="@lead.LeadId" />
                            <button type="submit" class="btn btn-sm btn-danger" title="Supprimer le lead" onclick="return confirm('Voulez-vous vraiment supprimer ce lead ?');">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </form>

                     </td>
                    </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Pied de page -->
<footer class="bg-light text-center text-lg-start" style="background-color: #a8dadc;">
    <div class="text-center p-3" style="color: #1d3557;">
        © 2025 Ticketing System. Tous droits réservés.
    </div>
</footer>

