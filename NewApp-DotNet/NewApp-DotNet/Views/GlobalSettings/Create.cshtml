@model GlobalSettingsModel

@{
    ViewData["Title"] = "Modifier le seuil d'alerte";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="card shadow rounded">
        <div class="card-body">
            <h3 class="card-title mb-4 text-center">@ViewData["Title"]</h3>

            <form method="post">
                <div class="mb-3">
                    <label asp-for="AlertThreshold" class="form-label">Nouveau seuil</label>
                    <input asp-for="AlertThreshold" class="form-control" type="number" step="0.01" required />
                    <span asp-validation-for="AlertThreshold" class="text-danger"></span>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Valider</button>
                </div>
            </form>
        </div>
    </div>
</div>
