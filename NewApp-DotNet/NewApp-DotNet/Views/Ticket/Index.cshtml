@model List<Ticket>

@{
    ViewData["Title"] = "Liste des Tickets";
}

<!-- Tableau avec couleurs pastel -->
<div class="container mt-4">
    <div class="table-responsive">
        <table class="table table-hover table-bordered" style="background-color: #f1faee; color: #1d3557; border-radius: 8px;">
            <thead class="thead-light" style="background-color: #43cce7; color: white;">
                <tr>
                    <th class="text-center">Ticket ID</th>
                    <th class="text-center">Sujet</th>
                    <th class="text-center">Description</th>
                    <th class="text-center">Statut</th>
                    <th class="text-center">Priorité</th>
                    <th class="text-center">Créé le</th>
                    <th class="text-center">Manager</th>
                    <th class="text-center">Employé</th>
                    <th class="text-center">Client</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td class="text-center">@ticket.TicketId</td>
                        <td class="text-center">@ticket.Subject</td>
                        <td>@ticket.Description</td>
                        <td class="text-center">
                            @if (ticket.Status == "Open")
                            {
                                <span class="badge badge-success">Ouvert</span>
                            }
                            else if (ticket.Status == "Closed")
                            {
                                <span class="badge badge-danger">Fermé</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">En cours</span>
                            }
                        </td>
                        <td class="text-center">@ticket.Priority</td>
                        <td class="text-center">@ticket.CreatedAt?.ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@ticket.Manager?.Username</td>
                        <td class="text-center">@ticket.Employee?.Username</td>
                        <td class="text-center">@ticket.Customer?.name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Bouton Retour au Dashboard -->
    <div class="d-flex justify-content-center mt-4">
        <a href="http://localhost:5077/Dashboard" class="btn btn-outline-primary shadow-sm">
            ⬅️ Retour au Dashboard
        </a>
    </div>
</div>

<!-- Pied de page avec des couleurs pastel -->
<footer class="bg-light text-center text-lg-start mt-4" style="background-color: #a8dadc; padding: 20px;">
    <div class="text-center" style="color: #1d3557;">
        © 2025 Ticketing System. Tous droits réservés.
    </div>
</footer>
