@{
    ViewData["Title"] = "Tableau de bord";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Tableau de bord</h2>

    <div class="row">
        <!-- Premier graphique : Diagramme en barres -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Nombre de ventes par mois
                </div>
                <div class="card-body">
                    <canvas id="salesChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <!-- Deuxième graphique : Diagramme circulaire -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    Répartition des ventes par catégorie
                </div>
                <div class="card-body">
                    <canvas id="categoryChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Données en dur pour le premier graphique (diagramme en barres)
        const salesData = {
            labels: ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 'Juin'],
            datasets: [{
                label: 'Nombre de ventes',
                data: [65, 59, 80, 81, 56, 55],
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1
            }]
        };

        // Configuration du premier graphique
        const salesConfig = {
            type: 'bar',
            data: salesData,
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        };

        // Créer le premier graphique
        const salesChart = new Chart(
            document.getElementById('salesChart'),
            salesConfig
        );

        // Données en dur pour le deuxième graphique (diagramme circulaire)
        const categoryData = {
            labels: ['Électronique', 'Vêtements', 'Alimentation', 'Livres'],
            datasets: [{
                label: 'Répartition des ventes',
                data: [300, 150, 100, 50],
                backgroundColor: [
                    'rgba(255, 99, 132, 0.2)',
                    'rgba(75, 192, 192, 0.2)',
                    'rgba(255, 205, 86, 0.2)',
                    'rgba(153, 102, 255, 0.2)'
                ],
                borderColor: [
                    'rgba(255, 99, 132, 1)',
                    'rgba(75, 192, 192, 1)',
                    'rgba(255, 205, 86, 1)',
                    'rgba(153, 102, 255, 1)'
                ],
                borderWidth: 1
            }]
        };

        // Configuration du deuxième graphique
        const categoryConfig = {
            type: 'pie',
            data: categoryData,
        };

        // Créer le deuxième graphique
        const categoryChart = new Chart(
            document.getElementById('categoryChart'),
            categoryConfig
        );
    </script>
}