@model DashboardViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
            margin: 0;
            padding: 0;
        }

        .container {
            display: flex;
            justify-content: space-around;
            gap: 30px;
            padding: 30px 0;
        }

        .box {
            width: 30%;
            padding: 40px;
            text-align: center;
            border-radius: 10px;
            color: white;
            font-size: 28px;
            font-weight: bold;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .box:hover {
            transform: translateY(-10px);
        }

        .customer {
            background-color: #74c7a8;
        }

        .ticket {
            background-color: #ffb400;
        }

        .lead {
            background-color: #3498db;
        }

        .box h3 {
            margin: 0;
            font-size: 22px;
        }

        .box p {
            margin: 10px 0;
            font-size: 36px;
        }

        .box .details {
            font-size: 18px;
            color: #f4f4f4;
        }

        .chart-container {
            width: 60%;
            height: 450px;
            margin: 50px auto 0;
        }

        .chart-container canvas {
            display: block;
            margin: 0 auto;
        }

        .client-stats-table {
            width: 80%;
            margin: 50px auto;
            border-collapse: collapse;
        }

        .client-stats-table th, .client-stats-table td {
            border: 1px solid #ddd;
            padding: 12px;
            text-align: center;
        }

        .client-stats-table th {
            background-color: #3498db;
            color: white;
        }

        .client-stats-table td {
            background-color: #f9f9f9;
        }
    </style>
</head>
<body>

<!-- Section Total Counts -->


<!-- Section Client Stats -->
<h2 style="text-align: center;">Client Statistics</h2>
<table class="client-stats-table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Total Budget</th>
            <th>Total Depense</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model.ClientStats)
        {
            <tr>
                <td>@client.userId</td>
                <td>@client.name</td>
                <td>$@client.totalBudget</td>
                <td>$@client.totalDepense</td>
            </tr>
        }
    </tbody>
</table>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Customers', 'Tickets', 'Leads'],
            datasets: [{
                label: 'Total Count',
                data: [@Model.TotalCount.customerCount, @Model.TotalCount.ticketCount, @Model.TotalCount.leadCount],
                backgroundColor: [
                    '#74c7a8', // Couleur verte claire
                    '#ffb400', // Couleur orange clair
                    '#3498db'  // Couleur bleu clair
                ],
                borderColor: [
                    '#56b597', // Couleur verte plus foncée
                    '#e68900', // Couleur orange plus foncée
                    '#2980b9'  // Couleur bleue plus foncée
                ],
                borderWidth: 2
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        font: {
                            size: 14
                        }
                    }
                },
                x: {
                    ticks: {
                        font: {
                            size: 16
                        }
                    }
                }
            },
            plugins: {
                legend: {
                    labels: {
                        font: {
                            size: 16
                        }
                    }
                }
            }
        }
    });
</script>

</body>
</html>
